        </default>
        <default class="viz_dishwasher" >
            <geom group="1"  contype="0" conaffinity="0"/>
        </default>
        <default class="col">
            <geom rgba=".4 .8 .5 1" group="3" contype="1" conaffinity="0"/>
        </default>
   </default>
