<mujoco model="iai_door">
  <compiler angle="radian" meshdir="assets" autolimits="true"  inertiafromgeom="true" balanceinertia="true" />
  <option solver="Newton" integrator="RK4" >
    <flag contact="enable" energy="disable" multiccd="enable"/>
