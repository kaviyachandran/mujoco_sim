    <mesh name="Handle80" file="Handle80.obj"/>
    <mesh name="Drawer_80_29" file="Drawer_80_29.obj"/>
    <mesh name="DishWasher" file="dishwasher.stl"/>
    <mesh name="DishWasherDoor" file="dishwasher_door.stl"/>
  </asset>
   <default>
